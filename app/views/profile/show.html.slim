.page-header
  h1= @user.full_name

- if @statuses
  .list-group
    - @statuses.each do |status|
      .media.list-group-item
        = link_to status, method: :delete, data:{confirm:'Do you really want to delete me?'} do
          button.btn.close.delete type="button"
            | &times;
        a.pull-left href="#"
          img.media-object.img-circle src=status.user.gravatar alt="Profile Pic"
        .media-body
          h4.media-heading= status.user.full_name
          = status.content
        .pull-right.status-time= link_to status do
          - time_ago_in_words(status.created_at) + " ago"
- else
    h3.text-center  This user has no status updates